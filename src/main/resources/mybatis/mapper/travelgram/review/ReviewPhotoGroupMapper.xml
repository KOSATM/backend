<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.reviewPhoto.ReviewPhotoGroupDao">

  <select id="selectReviewPhotoGroupById" resultType="ReviewPhotoGroup">
    SELECT id, created_at, review_post_id
    FROM review_photo_groups WHERE id = #{id}
  </select>

  <insert id="insertReviewPhotoGroup" parameterType="ReviewPhotoGroup" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
    INSERT INTO review_photo_groups (created_at, review_post_id)
    VALUES (NOW(), #{reviewPostId})
  </insert>

  <update id="updateReviewPhotoGroup" parameterType="ReviewPhotoGroup">
    UPDATE review_photo_groups
    SET created_at = NOW(), review_post_id = #{reviewPostId}
    WHERE id = #{id}
  </update>

  <delete id="deleteReviewPhotoGroupById" parameterType="long">
    DELETE FROM review_photo_groups WHERE id = #{id}
  </delete>

</mapper>
