<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.supporter.checklist.dao.ChecklistDao">

    <!-- 공통 컬럼 -->
    <resultMap id="ChecklistResultMap" type="Checklist">
        <id property="id" column="id" />
        <result property="userId" column="user_id" />
        <result property="dayIndex" column="day_index" />
        <result property="createdAt" column="created_at" />
    </resultMap>

    <!-- INSERT -->
    <insert id="insertChecklist" parameterType="Checklist" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO checklists (user_id, day_index, created_at)
        VALUES (#{userId}, #{dayIndex}, #{createdAt})
    </insert>

    <!-- SELECT (단건 조회) -->
    <select id="selectChecklistById" parameterType="long" resultMap="ChecklistResultMap">
        SELECT id, user_id, day_index, created_at
        FROM checklists
        WHERE id = #{id}
    </select>

    <!-- SELECT (userId와 dayIndex로 조회) -->
    <select id="selectChecklistByUserIdAndDayIndex" resultMap="ChecklistResultMap">
        SELECT id, user_id, day_index, created_at
        FROM checklists
        WHERE user_id = #{userId} AND day_index = #{dayIndex}
        LIMIT 1
    </select>

    <!-- SELECT (userId 기준 조회) -->
    <select id="selectChecklistsByUserId" parameterType="long" resultMap="ChecklistResultMap">
        SELECT id, user_id, day_index, created_at
        FROM checklists
        WHERE user_id = #{userId}
        ORDER BY day_index ASC
    </select>

    <!-- UPDATE -->
    <update id="updateChecklist" parameterType="Checklist">
        UPDATE checklists
        SET
            user_id = #{userId},
            day_index = #{dayIndex},
            created_at = #{createdAt}
        WHERE id = #{id}
    </update>

    <!-- DELETE -->
    <delete id="deleteChecklist" parameterType="long">
        DELETE FROM checklists
        WHERE id = #{id}
    </delete>

</mapper>