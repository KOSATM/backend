<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.supporter.checklist.dao.ChecklistItemDao">

    <!-- 공통 컬럼 -->
    <resultMap id="ChecklistItemResultMap" type="ChecklistItem">
        <id property="id" column="id" />
        <result property="checklistId" column="checklist_id" />
        <result property="content" column="content" />
        <result property="category" column="category" />
        <result property="isChecked" column="is_checked" />
        <result property="createdAt" column="created_at" />
    </resultMap>

    <!-- INSERT -->
    <insert id="insertChecklistItem" parameterType="ChecklistItem" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO checklist_items (checklist_id, content, category, is_checked, created_at)
        VALUES (#{checklistId}, #{content}, #{category}::checklist_category_enum, #{isChecked}, #{createdAt})
    </insert>

    <!-- SELECT (단건 조회) -->
    <select id="selectChecklistItemById" parameterType="long" resultMap="ChecklistItemResultMap">
        SELECT id, checklist_id, content, category, is_checked, created_at
        FROM checklist_items
        WHERE id = #{id}
    </select>

    <!-- SELECT (checklistId 기준 조회) -->
    <select id="selectChecklistItemsByChecklistId" parameterType="long" resultMap="ChecklistItemResultMap">
        SELECT id, checklist_id, content, category, is_checked, created_at
        FROM checklist_items
        WHERE checklist_id = #{checklistId}
        ORDER BY created_at ASC
    </select>

    <!-- UPDATE -->
    <update id="updateChecklistItem" parameterType="ChecklistItem">
        UPDATE checklist_items
        SET
            checklist_id = #{checklistId},
            content = #{content},
            category = #{category}::checklist_category_enum,
            is_checked = #{isChecked},
            created_at = #{createdAt}
        WHERE id = #{id}
    </update>

    <!-- DELETE (단건 삭제) -->
    <delete id="deleteChecklistItem" parameterType="long">
        DELETE FROM checklist_items
        WHERE id = #{id}
    </delete>

    <!-- DELETE (checklistId 기준 일괄 삭제) -->
    <delete id="deleteChecklistItemsByChecklistId" parameterType="long">
        DELETE FROM checklist_items
        WHERE checklist_id = #{checklistId}
    </delete>

</mapper>